#!/usr/bin/env python3

import sys
import os
from subprocess import call

args = ["./gradlew", "run"]
if len(sys.argv) > 1:
    args.append("-PteamAclasspath=" + os.path.join(os.getcwd(), "backups/" + sys.argv[1]))

if len(sys.argv) > 2:
    args.append("-PteamBclasspath=" + os.path.join(os.getcwd(), "backups/" + sys.argv[2]))

call(args)
